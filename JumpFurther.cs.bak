using System;
using System.Text;
using System.Text.RegularExpressions;
using System.Collections;
using System.Collections.Generic;
using System.Diagnostics;

public class JumpFurther {
    public int furthest(int N, int badStep) {
        int res = 0;
        for (int i = 0; i < N; i++)
        {
            res += i + 1;
            if (res == badStep)
                res -= 1;
        }
        return res;
    }

}



